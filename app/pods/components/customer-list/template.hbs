<table class="table table-striped table-hover ">
    <thead>
        <tr>
            <th>Felhasználónév</th>
            <th>Név</th>
            <th>Érvényesség</th>
            <th>Telefonszám</th>
            <th>Státusz</th>
            <th>Opciók</th>
        </tr>   
    </thead>
    <tbody>

        {{#each data.customers}}
        <tr>
            {{!--{{log this}}--}}
            <td>{{username}}</td>
            <td>{{name}}</td>
            <td>{{validity}}</td>
            <td>{{phonenumber}}</td>
            <td>{{status}}</td>
            <td>
                {{link-to "Megtekint" "customers.view" class="btn btn-default btn-sm" customer=this messages=data.messages}}
                {{link-to "Szerkeszt" "customers.edit" this class="btn btn-default btn-sm"}}
                <button {{action "deleteCustomer" this}} class="btn btn-default btn-sm">Töröl</button>
            </td>
        </tr>
        {{/each}}
    </tbody>
</table>